# BSC Leverage Bot - Environment Variables
# Copy this file to .env and fill in your values

# BSC RPC URLs
BSC_RPC_URL_HTTP=https://bsc-dataseed1.binance.org/
BSC_RPC_URL_WS=wss://bsc-ws-node.nariox.org:443

# Redis
REDIS_URL=redis://localhost:6379/0

# Node Relay mode (true = subscribe to Redis, false = direct WebSocket)
USE_NODE_RELAY=true

# Aave V3
AAVE_V3_POOL_ADDRESS=0x6807dc923806fE8Fd134338EABCA509979a7e0cB

# Execution
LEVERAGE_EXECUTOR_ADDRESS=
EXECUTOR_DRY_RUN=true

# Position Management
MAX_LEVERAGE_RATIO=3.0
MIN_HEALTH_FACTOR=1.5
MAX_FLASH_LOAN_USD=5000000

# MEV / Builder API
BLOXROUTE_API_KEY=

# Gnosis Safe (optional)
SAFE_ADDRESS=

# External APIs
COINMARKETCAP_API_KEY=
